{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "verbatimModuleSyntax": false
  },
  "include": ["*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
